<div class="sidebar__container js-sidebar">

    <div class="sidebar__cross-container">
        <image class="sidebar__cross js-sidebar-cross" src="/guitarWorld/public/assets/icons/cross.svg">
    </div>

    {% if user is defined and user is not null %}
        <h2>Hallo {{user.firstname}} {{user.lastname}}</h2>

        {% if isAdmin(user) == true %}
            <a href="{{path('create_guitar')}}">Gitarre anlegen</a>
        {% endif %}


        <a class="button" href="{{path('logout')}}"> Logout </a>
        

    {% else %}
        {% include 'login_form.html.twig' %}
        <a class="button" href="{{path('create_user')}}"> Registrieren </a> 
    {% endif %}

</div>